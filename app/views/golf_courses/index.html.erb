<div class="grid justify-center">
  <% @courses.each do |course| %>
  <div class="grid justify-center border mt-3 p-4 w-56">
    <p class="text-base"><span class="text-xl"><%= course.name %></span> is a <%= course.holes %> hole golf course located in <%= course.location %></p>
    <% if course.picture.attached? %>
      <%= image_tag url_for(course.picture) %>
    <% end %>
  </div>
  <%end%>
</div>

